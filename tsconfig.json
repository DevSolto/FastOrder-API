{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "ES6",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
